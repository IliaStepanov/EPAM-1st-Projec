<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:mvc="http://www.springframework.org/schema/mvc"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
 		http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
 		  http://www.springframework.org/schema/context
 		  http://www.springframework.org/schema/context/spring-context.xsd
 		  http://www.springframework.org/schema/mvc http://www.springframework.org/schema/mvc/spring-mvc.xsd">

    <mvc:annotation-driven/>

    <context:component-scan base-package="com.epam.lowcost.controller"/>


    <bean id="dBinitialize" class="com.epam.lowcost.db.DBinitialize">
        <constructor-arg ref="idDataSource"/>
    </bean>

    <bean id="userDAO" class="com.epam.lowcost.DAO.UserDAOImpl">
        <constructor-arg ref="idDataSource"/>
    </bean>
    <bean id="userService" class="com.epam.lowcost.service.UserServiceImpl">
        <constructor-arg ref="userDAO"/>
    </bean>

    <bean id="idDataSource" class="org.springframework.jdbc.datasource.DriverManagerDataSource">
        <property name="driverClassName" value="org.h2.Driver"/>
        <property name="url" value="jdbc:h2:mem:/test;DB_CLOSE_DELAY=-1"/>
        <property name="username" value="ca"/>
        <property name="password" value=""/>
    </bean>
    <bean class="org.springframework.web.servlet.view.InternalResourceViewResolver">
        <property name="prefix" value="/views/"/>
        <property name="suffix" value=".jsp"/>
    </bean>


</beans>